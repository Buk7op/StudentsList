@model IEnumerable<GradesWithAvg>
@{
    Layout = "_LayoutTask";
}
<h3>Список классов, отсортированных в порядке убывания среднего бала учеников:</h3>
<table class="table table-bordered table-striped" style="width:50%">
    <thead>
        <tr>
            <th>
                Класс
            </th>
            <th>
                Средний балл
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lines in Model)
        {
            <tr>
                <td width="25%" align="center">@lines.Group</td>
                <td width="25%" align="center">@lines.AvgScore</td>
            </tr>

        }
    </tbody>
</table>